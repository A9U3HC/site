{
    "compilerOptions": {
        "target": "ES2022",
        "lib": [
            "DOM",
            "DOM.Iterable",
            "ES2022"
        ],
        "jsx": "react",
        "jsxFactory": "React.createElement",
        "jsxFragmentFactory": "React.createFragment",
        "moduleResolution": "node",
        "isolatedModules": true,
        "strictNullChecks": true,
        "esModuleInterop": true,
        "declaration": true
    },
    "include": [
        "src"
    ],
    "exclude": [
        "node_modules"
    ]
}
